<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:padding="16dp"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.shiboo.fajri_1202140198_modul2.dinnerin">
    <TextView
        android:gravity="center"
        android:textAppearance="@android:style/TextAppearance.Medium"
        android:text="Data Pelanggan"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <EditText
        android:id="@+id/input_nama_2"
        android:layout_margin="10dp"
        android:singleLine="true"
        android:gravity="center"
        android:hint="Nama"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <LinearLayout
        android:weightSum="3"
        android:layout_margin="10dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_gravity="center_vertical"
            android:layout_weight="2"
            android:text="Nomor Meja :"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <Spinner
            android:id="@+id/nomor_meja"
            android:textAlignment="textStart"
            android:padding="3dp"
            android:layout_weight="1"
            android:entries="@array/nomor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>
    <Button
        android:onClick="lihatinmenu2"
        android:layout_gravity="center_horizontal"
        android:text="pilih menu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

</LinearLayout>
